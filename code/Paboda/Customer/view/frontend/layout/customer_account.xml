<?xml version="1.0" encoding="UTF-8"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current"
                   name="customer-account-navigation-mycustomtab">
                <arguments>
                    <argument name="path" xsi:type="string">customer/custom/index</argument>
                    <argument name="label" xsi:type="string">My Custom Tab MENU ITEM</argument>
                    <argument name="sortOrder" xsi:type="number">10</argument>
                </arguments>
            </block>
            <block class="Paboda\Customer\Block\Customer\Tab\ManageCompanyCustomer"
                   name="customer-account-navigation-manage-company">
                <arguments>
                    <argument name="path" xsi:type="string">customer/company/index</argument>
                    <argument name="label" xsi:type="string" translate="true">Manage My Company</argument>
                    <argument name="sortOrder" xsi:type="number">20</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
