<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="product.info.price">
        <container name="product.custom.price.rule.price"
                   as="product-custom-price-rule"
                   label="Show price from price rule"
                   htmlTag="div"
                   htmlClass="addon-title"
                   before="product.price.tier">
            <block class="Magento\Framework\View\Element\Template"
                   name="product.attribute.discontinued.message.template"
                   template="Paboda_PriceRule::product/price.phtml">
                <arguments>
                    <argument name="price_rule_view_model"
                              xsi:type="object">Paboda\PriceRule\ViewModel\SpecialPrice</argument>
                </arguments>
            </block>
        </container>
    </referenceContainer>
</page>
